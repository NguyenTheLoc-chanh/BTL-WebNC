@section Scripts
{
    <script>
        let quantityDisplay;
        document.addEventListener("DOMContentLoaded", function () {
        const sizeButtons = document.querySelectorAll(".size-option");
        const stockInfo = document.getElementById("stock-info");
        const decreaseBtn = document.querySelector(".btn-decrease");
        const increaseBtn = document.querySelector(".btn-increase");
        quantityDisplay = document.querySelector(".quantity-display");

        let currentQuantity = 1;
        let stock = 0;

        function disableButtons() {
            decreaseBtn.setAttribute("disabled", "true");
            increaseBtn.setAttribute("disabled", "true");
        }
        disableButtons();

        sizeButtons.forEach(button => {
            button.addEventListener("click", function () {
                // B·ªè ch·ªçn t·∫•t c·∫£ c√°c n√∫t
                sizeButtons.forEach(btn => btn.classList.remove("active"));
                
                // ƒê√°nh d·∫•u n√∫t ƒëang ch·ªçn
                this.classList.add("active");
                selectedSize = this.getAttribute("data-size");
                errorDiv.style.display = "none";

                stock = parseInt(this.getAttribute("data-stock"));
                stockInfo.textContent = `Kho c√≤n: ${stock} s·∫£n ph·∫©m.`;

                currentQuantity = 1;
                quantityDisplay.textContent = currentQuantity;
                // N·∫øu size c√≥ h√†ng th√¨ b·∫≠t n√∫t tƒÉng/gi·∫£m
                if (stock > 0) {
                    decreaseBtn.removeAttribute("disabled");
                    increaseBtn.removeAttribute("disabled");
                } else {
                    disableButtons();
                }
            });
        });

        // X·ª≠ l√Ω gi·∫£m s·ªë l∆∞·ª£ng
        decreaseBtn.addEventListener("click", function () {
            if (currentQuantity > 1) {
                currentQuantity--;
                quantityDisplay.textContent = currentQuantity;
            }
        });
        // X·ª≠ l√Ω tƒÉng s·ªë l∆∞·ª£ng
        increaseBtn.addEventListener("click", function () {
            if (currentQuantity < stock) {
                currentQuantity++;
                quantityDisplay.textContent = currentQuantity;
            }
        });
    });
    // Truy·ªÅn gi√° tr·ªã ƒëƒÉng nh·∫≠p t·ª´ server v√†o bi·∫øn JavaScript
    let isLoggedIn = @Json.Serialize(User.Identity.IsAuthenticated);
    let selectedSize = null;
    const errorDiv = document.getElementById("error-message");

    let userId = document.querySelector(".btn__addCart").getAttribute("data-userID");

    function updateCartCount() {
        $.get(`/Home/GetCartCount?userId=${encodeURIComponent(userId)}`, function (data) {
            $("#cart-count").text(data.count);
        }).fail(function () {
            console.error("Kh√¥ng th·ªÉ l·∫•y d·ªØ li·ªáu gi·ªè h√†ng.");
        });
    }
    function showToast() {
        let toastEl = document.getElementById("cartToast");
        let toast = new bootstrap.Toast(toastEl);
        toast.show();
    }

    function checkLogin(event, actionType) {
            event.preventDefault();

            if (!isLoggedIn) {
                window.location.href = "/login";
                return;
            }

            if (!selectedSize) {
                errorDiv.textContent = "Vui l√≤ng ch·ªçn k√≠ch c·ª°!";
                errorDiv.style.display = "block";
                return;
            }
            let quantityDisplay = document.querySelector(".quantity-display");
            let productId = document.querySelector(".btn__addCart").getAttribute("data-id");
            let userId = document.querySelector(".btn__addCart").getAttribute("data-userID");
            let sizeId = selectedSize || 0;
            if (actionType === "cart") {
                $.ajax({
                    url: '@Url.Action("AddToCart", "Home")',
                    type: 'POST',
                    contentType: "application/json",
                    data: JSON.stringify({
                        userId: userId,
                        productId: parseInt(productId),
                        sizeId: parseInt(selectedSize),
                        quantity: parseInt(quantityDisplay.textContent)
                    }),
                    success: function (response) {
                        updateCartCount(); // C·∫≠p nh·∫≠t s·ªë l∆∞·ª£ng gi·ªè h√†ng
                        showToast();
                    },
                    error: function () {
