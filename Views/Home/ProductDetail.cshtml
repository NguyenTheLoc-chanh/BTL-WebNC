            } else if (actionType === "buy") {
                alert("Chuy·ªÉn ƒë·∫øn trang thanh to√°n!");
                // Chuy·ªÉn h∆∞·ªõng ƒë·∫øn trang thanh to√°n
                window.location.href = "/Checkout";
