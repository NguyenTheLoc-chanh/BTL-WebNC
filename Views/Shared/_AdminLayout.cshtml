@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Admin Dashboard</title>
    <link href="~/lib/bootstrap/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link href="~/css/admin.css" rel="stylesheet" />
</head>
<body>
    <!-- Sidebar bên trái -->
    <div class="sidebar">
        <div class="sidebar-header">
            <h2>Admin Panel</h2>
        </div>
        <ul class="sidebar-nav">
            <li><a asp-area="Admin" asp-controller="HomeAdmin" asp-action="Index">📦 Quản lý sản phẩm</a></li>
            <li><a asp-area="Admin" asp-controller="User" asp-action="Index" >👤 Quản lý người dùng</a></li>
            <li><a asp-area="Admin" asp-controller="User" asp-action="PendingRequests">💬 Duyệt tài khoản</a></li>
            <li><a asp-controller="Admin-Product" asp-action="PendingProducts">📋 Duyệt sản phẩm</a></li>
        </ul>
        <div class="sidebar-footer">
            <a class="logout"asp-action="Index" asp-controller="Home">Trở về trang chủ</a>
        </div>
    </div>

    <!-- Nội dung chính bên phải -->
    <div class="main-content">
        <div class="header">
            <a class="logout" asp-action="Index" asp-controller="Home">Trở về trang chủ</a>


        </div>
        <div class="content">
            @RenderBody()
        </div>
    </div>

    @RenderSection("Scripts", required: false)
</body>
</html>