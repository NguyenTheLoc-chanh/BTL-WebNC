@model BTL_WEBNC.Models.OrderDetails

@{
    ViewData["Title"] = "Thanh toán thành công";
}

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow rounded-4 border-0">
                <div class="card-body text-center p-5">
                    <div class="mb-4">
                        <i class="bi bi-check-circle-fill text-success" style="font-size: 3rem;"></i>
                        <h2 class="mt-3">Thanh toán thành công</h2>
                    </div>
                    <p class="fs-5">Cảm ơn bạn đã đặt hàng tại cửa hàng chúng tôi!</p>
                    <p class="fw-semibold">Mã đơn hàng của bạn:</p>
                    <h4 class="text-primary mb-4">#@Model.order_Id</h4>
                    <p>Đơn hàng sẽ được giao trong thời gian sớm nhất.</p>

                    <div class="d-grid gap-2 d-sm-flex justify-content-center mt-4">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-success px-4 rounded-pill">Tiếp tục mua sắm</a>
                        <a href="/Order/History" class="btn btn-outline-secondary px-4 rounded-pill">Xem lịch sử đơn hàng</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
