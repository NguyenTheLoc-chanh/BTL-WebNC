@page "/admin/delete-role/{roleid}"
@model BTL_WEBNC.Admin.Roles.DeleteModel

@{
    ViewData["Title"] = "Cập nhật role";
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="@Model.StatusMessage" />
<div class="row">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <p>Bạn có chắc chắn xóa <strong>@Model.role.Name</strong>!</p>

            <div class="form-group">
                <input type="submit" value="Xóa" class="btn btn-danger">
                <a class="btn btn-primary" asp-page="./Index">Danh sách các role</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}