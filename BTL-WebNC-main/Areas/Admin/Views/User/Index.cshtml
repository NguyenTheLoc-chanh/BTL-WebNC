@model IEnumerable<BTL_WEBNC.Models.User>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    ViewData["Title"] = "Quản lý người dùng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h2>Quản lý người dùng</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Thêm người dùng</a>
</p>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Tên đăng nhập</th>
            <th>Email</th>
            <th>Trạng thái tài khoản</th>
            <th>Vai trò</th>
            <th>Trạng thái duyệt</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var user in Model)
        {
            <tr>
                <td>@user.UserName</td>
                <td>@user.Email</td>
                <td>
                    @if (user.LockoutEnd.HasValue && user.LockoutEnd.Value > DateTime.Now)
                    {
                        <span class="badge badge-danger">Bị khóa</span>
                    }
                    else
                    {
                        <span class="badge badge-success">Hoạt động</span>
                    }
                </td>
                <td>
                    @if (user.Role == UserRole.Admin)
                    {
                        <span class="badge badge-dark">Admin</span>
                    }
                    else if (user.Role == UserRole.Seller)
                    {
                        <span class="badge badge-info">Người bán</span>
                    }
                    else if (user.Role == UserRole.Customer)
                    {
                        <span class="badge badge-primary">Khách hàng</span>
                    }
                </td>
                <td>
                    @if (user.SellerApprovalStatus == SellerApprovalStatus.Pending)
                    {
                        <span class="badge badge-warning">Chờ duyệt</span>
                    }
                    else if (user.SellerApprovalStatus == SellerApprovalStatus.Approved)
                    {
                        <span class="badge badge-success">Đã duyệt</span>
                    }
                    else if (user.SellerApprovalStatus == SellerApprovalStatus.Rejected)
                    {
                        <span class="badge badge-danger">Bị từ chối</span>
                    }
                    else
                    {
                        <span class="badge badge-secondary">Không áp dụng</span>
                    }
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@user.Id" class="btn btn-warning btn-sm">Sửa</a>
                    <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-danger btn-sm">Xóa</a>

                    @if (user.SellerApprovalStatus == SellerApprovalStatus.Approved)
                    {
                        <form asp-action="ApproveUser" method="post" style="display:inline;">
                            <input type="hidden" name="userId" value="@user.Id" />
                            <button type="submit" class="btn btn-success btn-sm">Duyệt</button>
                        </form>
                        <form asp-action="RejectUser" method="post" style="display:inline;">
                            <input type="hidden" name="userId" value="@user.Id" />
                            <button type="submit" class="btn btn-danger btn-sm">Từ chối</button>
                        </form>
                    }

                    <form asp-action="ToggleAccountStatus" method="post" style="display:inline;">
                        <input type="hidden" name="userId" value="@user.Id" />
                        <button type="submit" class="btn btn-secondary btn-sm">
                            @(user.LockoutEnd.HasValue && user.LockoutEnd.Value > DateTime.Now ? "Mở khóa" : "Khóa")
                        </button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
