@model BTL_WEBNC.Models.Product

@{
    ViewData["Title"] = "Xóa Sản Phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";

}

<h2>Xóa Sản Phẩm</h2>

<h3>Bạn có chắc muốn xóa sản phẩm này?</h3>

<div>
    <h4>@Model.Name</h4>
    <dl class="row">
        <dt class="col-sm-2">Giá</dt>
        <dd class="col-sm-10">@Model.Price</dd>
        <dt class="col-sm-2">Số lượng</dt>
        <dd class="col-sm-10">@Model.Stock</dd>
        <dt class="col-sm-2">Mô tả</dt>
        <dd class="col-sm-10">@Model.Description</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Product_Id" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
    <a asp-action="Index" class="btn btn-secondary">Quay về</a>

</form>
