@model IEnumerable<BTL_WEBNC.Models.Product>
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

<h2>Danh sách sản phẩm chờ duyệt</h2>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessMessage"]
    </div>
}

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Tên sản phẩm</th>
            <th>Mô tả</th>
            <th>Giá</th>
            <th>Hình ảnh</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.Description</td>
                <td>@string.Format("{0:N0} VNĐ", product.Price)</td>
                <td>
                    @if (!string.IsNullOrEmpty(product.Images))
                    {
                        <img src="@product.Images" alt="Ảnh sản phẩm" style="width:100px" />
                    }
                    else
                    {
                        <span>Chưa có ảnh</span>
                    }
                </td>
                <td>
                    @if (product.ApprovalStatus == ProductApprovalStatus.Approved)
                    {
                        <form asp-action="ApproveProduct" method="post" style="display:inline;">
                            <input type="hidden" name="productId" value="@product.Product_Id" />
                            <button type="submit" class="btn btn-success btn-sm">Duyệt</button>
                        </form>
                        <form asp-action="RejectProduct" method="post" style="display:inline;">
                            <input type="hidden" name="productId" value="@product.Product_Id" />
                            <button type="submit" class="btn btn-danger btn-sm">Từ chối</button>
                        </form>
                    }
                    else
                    {
                        <span class="badge badge-info">Trạng thái: @product.ApprovalStatus</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
