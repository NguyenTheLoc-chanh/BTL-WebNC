@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Dashboard</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <style>
        body {
            background-color: #f4f6f9;
        }

        .sidebar {
            background-color: #343a40;
            color: white;
            min-height: 100vh;
        }

            .sidebar a {
                color: white;
                padding: 15px;
                text-decoration: none;
                display: block;
            }

                .sidebar a:hover {
                    background-color: #495057;
                }

        .content-wrapper {
            margin-left: 250px;
            padding: 20px;
        }
    </style>
</head>
<body>
    <!-- Sidebar -->
    <div class="sidebar">
        <h2 class="text-center p-4">Admin Panel</h2>
        <a href="/Admin/ManageUsers"><i class="fas fa-users"></i> Quản lý người dùng</a>
        <a href="/Admin/ManageProducts"><i class="fas fa-box"></i> Quản lý sản phẩm</a>
        <a href="/Admin/Orders"><i class="fas fa-shopping-cart"></i> Quản lý đơn hàng</a>
        <a href="/Admin/Settings"><i class="fas fa-cogs"></i> Cài đặt</a>
        <a href="/Account/Logout"><i class="fas fa-sign-out-alt"></i> Đăng xuất</a>
    </div>

    <!-- Content Wrapper -->
    <div class="content-wrapper">
        <nav class="navbar navbar-expand-lg navbar-light bg-light">
            <a class="navbar-brand" href="#">Admin Dashboard</a>
        </nav>

        <!-- Page content -->
        @RenderBody()
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
